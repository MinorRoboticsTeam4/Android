<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:interpolator="@android:anim/linear_interpolator"
    android:id="@+id/cv"
    android:theme="@style/AppTheme.Base"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/coffee_wrap"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:interpolator="@android:anim/linear_interpolator"
        android:nestedScrollingEnabled="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/coffee_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="0dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coffee_name"
                android:textSize="30sp"
                android:text="Coffee"
                android:layout_toRightOf="@+id/coffee_photo"
                android:layout_toEndOf="@+id/coffee_photo"
                android:textColor="#656565"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/coffee_arrow"
                android:layout_alignTop="@+id/coffee_photo"
                android:layout_marginTop="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/coffee_photo"
            android:layout_below="@+id/coffee_name">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.235">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Strength"
                    android:id="@+id/textView"
                    android:layout_weight="0.25"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="4"
                    android:id="@+id/textViewStrength"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.265">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Milk"
                    android:id="@+id/textView5"
                    android:layout_weight="0.25"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="4"
                    android:id="@+id/textViewMilk"
                    android:textStyle="bold"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sugar"
                    android:id="@+id/textView6"
                    android:layout_weight="0.25"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="4"
                    android:id="@+id/textViewSugar"
                    android:textStyle="bold"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6"
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Mug"
                    android:id="@+id/textView7"
                    android:layout_weight="0.25"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Yes"
                    android:id="@+id/textViewMug"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_alignBaseline="@+id/textView7"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteButton"
            android:layout_alignTop="@+id/coffee_photo"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:src="@android:drawable/ic_menu_delete"
            android:background="#00000000"
            android:tint="#BBBBBB"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/coffee_name"
            android:layout_alignBottom="@+id/coffee_name"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="3dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
